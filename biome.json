{
	"$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
        "nursery": {
            "noUnusedImports": "warn"
        }
        }
    },
    "formatter": {
        "enabled": true,
        "formatWithErrors": false,
        "indentStyle": "space",
        "indentWidth": 2,
        "lineWidth": 80,
        "lineEnding": "lf",
        "ignore": []
    },
    "files": {
        "include": ["**/*.js", "**/*.jsx", "**/*.ts", "**/*.tsx"]
      }
}
